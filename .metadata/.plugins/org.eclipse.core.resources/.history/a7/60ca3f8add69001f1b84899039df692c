package datePicker;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.ui.Select;

public class dob {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String expectedYear = "1990";
		String expectedMonth = "Nov";
		String expectedDate = "29";
		System.setProperty("driver.chrome.driver", "D:\\Selenium\\BrowserDrivers\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.get("https://www.facebook.com/");
		
//		 WebElement e = driver.findElement(By.xpath("//*[@id='content']/iframe"));
//	      driver.switchTo().frame(e);
		
		WebElement b = driver.findElement(By.xpath("//a[@class='_42ft _4jy0 _6lti _4jy6 _4jy2 selected _51sy']"));
		Actions act = new Actions(driver);
		act.moveToElement(b).click().perform();
		
		WebElement day = driver.findElement(By.xpath("//select[@id='day'] [@name='birthday_day']"));
		
		Select dropDown = new Select(day);
		
		dropDown.selectByVisibleText(expectedDate);
		
		
		WebElement month = driver.findElement(By.xpath("//select[@id='month']"));
		Select m = new Select(month);
		m.selectByValue(expectedMonth);
		
		WebElement year = driver.findElement(By.xpath("//select[@id='year']"));
		Select y = new Select(year);
		y.selectByValue(expectedYear);
		//
	}

}
